n1 = int(input("digite um numero"))
n2 = int(input("digite o segundo numero"))
n3 = int(input("digite o terceiro numero"))
n4 = int(input("digite o quarto numero"))
valores = n1, n2, n3, n4
print("voce digitou os valores {}".format(valores))
print("o maior valor dos numeros Ã© {}".format(max(valores)))
print("o valor 9 apareceu {} vezes".format(valores.count(9)))
if 3 in valores:
  print("o valor 3 apareceu na {} posicao".format(valores.index(3)+ 1))
else:
  print("o valor 3 nao foi digitado")
print("os valores pares digitados foram" , end='')
for n in valores:
  if n % 2 == 0:
    print(n, end=' ')
